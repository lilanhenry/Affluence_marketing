<ul>
  <% if ::Refinery::Investments::Admin::InvestmentsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.investments_admin_investments_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_investments_admin_investment_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Investments::Admin::InvestmentsController.sortable? && ::Refinery::Investments::Investment.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Investments"),
                 refinery.investments_admin_investments_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Investments"),
                 refinery.investments_admin_investments_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
