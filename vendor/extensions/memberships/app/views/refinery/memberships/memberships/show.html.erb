<% content_for :body_content_title do %>
  <%= @membership.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @membership.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @membership.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="memberships">
      <% @memberships.each do |membership| %>
        <li>
          <%= link_to membership.title, refinery.memberships_membership_path(membership) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
