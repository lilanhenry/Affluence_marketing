<ul>
  <% if ::Refinery::Memberships::Admin::MembershipsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.memberships_admin_memberships_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_memberships_admin_membership_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Memberships::Admin::MembershipsController.sortable? && ::Refinery::Memberships::Membership.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Memberships"),
                 refinery.memberships_admin_memberships_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Memberships"),
                 refinery.memberships_admin_memberships_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
